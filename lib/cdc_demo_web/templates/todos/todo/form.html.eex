<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :todo %>
  <%= textarea f, :todo %>
  <%= error_tag f, :todo %>

  <%= label f, :marked_as_done %>
  <%= checkbox f, :marked_as_done %>
  <%= error_tag f, :marked_as_done %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
